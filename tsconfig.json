{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Use NodeNext for ESM compatibility
    "moduleResolution": "nodenext", // or "node"
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true // Enable ESM for ts-node
  }
}