{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Use NodeNext for ESM compatibility
    "moduleResolution": "NodeNext", // or "node"
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "drizzle.config.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "ts-node": {
    "esm": true // Enable ESM for ts-node
  }
}